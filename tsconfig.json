{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "baseUrl": ".",
        "checkJs": false,
        "declaration": true,
        "diagnostics": true,
        "forceConsistentCasingInFileNames": true,
        // "inlineSources": true,
        "lib": [
            "es2015"
        ],
        "module": "commonJS",
        "moduleResolution": "node",
        "newLine": "LF",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        // "outFile": "dist/index.js",
        "paths": {},
        "pretty": true,
        "removeComments": true,
        "sourceMap": false,
        // "sourceMap": true,
        // "sourceRoot": "src",
        "strict": true,
        "strictNullChecks": true,
        "target": "es2015"
    },
    "include": [
        "src/**/*.ts"
    ]
}
